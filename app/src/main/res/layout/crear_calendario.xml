<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonColor"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="49dp"
        android:background="@color/calendarpurple"
        android:drawableBottom="@drawable/ic_color"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLetra" />

    <Button
        android:id="@+id/buttonLetra"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:background="@color/calendarpurple"
        android:drawableBottom="@drawable/ic_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreCalendario" />

    <Button
        android:id="@+id/button_crearcalendario"
        android:layout_width="86dp"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:background="@color/green"
        android:drawableBottom="@drawable/ic_new"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextNombreCalendario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="83dp"
        android:layout_height="41dp"
        android:layout_marginBottom="49dp"
        android:background="@color/red"
        android:drawableBottom="@drawable/ic_back"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonColor" />

    <EditText
        android:id="@+id/editTextNombreCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Nombre de calendario"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_crearcalendario" />

</androidx.constraintlayout.widget.ConstraintLayout>