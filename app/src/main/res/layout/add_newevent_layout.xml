<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue">

    <TextView
        android:id="@+id/mostrarfecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/cell_border_purple"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Fecha"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/eventname"
        android:layout_width="206dp"
        android:layout_height="30dp"
        android:layout_below="@id/mostrarfecha"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="1dp"
        android:background="@color/blue"
        android:hint="Nombre del evento"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:layout_alignTop="@id/eventname"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-15dp"
        android:background="@color/blue"
        android:drawableBottom="@drawable/ic_event"
        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:layout_above="@+id/addevent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:background="@color/blue"
        android:drawableBottom="@drawable/ic_link" />

    <ImageView
        android:id="@+id/imageViewGaleria"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_below="@id/eventname"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewPicto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_below="@id/imageViewGaleria"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonFoto"
        android:layout_width="142dp"
        android:layout_height="79dp"
        android:layout_below="@id/imageViewPicto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/cell_border_purple"
        android:drawableBottom="@drawable/ic_picture"/>

    <EditText
        android:id="@+id/eventvideo"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFoto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="1dp"
        android:background="@color/blue"
        android:hint="Url de video"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/addevent"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventvideo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/darkblue"
        android:text="Guardar"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>